<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.doable.controller.SettingsController" spacing="0" VBox.vgrow="ALWAYS">
    <!-- Menu Bar -->
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Exit" onAction="#onClose" />
        </Menu>
        <Menu text="Edit">
            <MenuItem text="Save" onAction="#onSave" />
        </Menu>
    </MenuBar>

    <!-- Main Content -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #f3f4f6;">
            
            <!-- Title Section -->
            <VBox spacing="10" style="-fx-background-color: #2563eb; -fx-padding: 20; -fx-border-radius: 8;">
                <Label text="Settings" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;" />
                <Label text="Customize notifications, import/export tasks" style="-fx-font-size: 12; -fx-text-fill: #e0e7ff;" />
            </VBox>

            <!-- Notification Settings Section -->
            <VBox spacing="15" style="-fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 20; -fx-background-color: white;">
                <Label text="Notification Settings" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #1f2937;" />
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Ringtone:" style="-fx-font-size: 12; -fx-min-width: 80;" />
                    <ComboBox fx:id="ringtoneCombo" prefWidth="250" style="-fx-font-size: 12;" />
                    <Button text="Test" onAction="#onTestRingtone" style="-fx-padding: 8 15; -fx-font-size: 12; -fx-background-color: #3b82f6; -fx-text-fill: white; -fx-border-radius: 4;" />
                </HBox>
                
                <Separator />
                
                <VBox spacing="8">
                    <Label text="Custom Ringtone File" style="-fx-font-size: 12; -fx-text-fill: #6b7280;" />
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button text="Choose File..." onAction="#onChooseCustomRingtone" style="-fx-padding: 8 15; -fx-font-size: 12; -fx-background-color: #8b5cf6; -fx-text-fill: white; -fx-border-radius: 4;" />
                        <Label fx:id="customRingtoneLabel" text="No custom ringtone selected" style="-fx-font-size: 11; -fx-text-fill: #6b7280;" />
                    </HBox>
                    <Label fx:id="customRingtoneStatus" text="" style="-fx-font-size: 10; -fx-text-fill: #9ca3af;" />
                </VBox>
            </VBox>

            <!-- Category Management Section -->
            <VBox spacing="15" style="-fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 20; -fx-background-color: white;">
                <Label text="Category Management" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #1f2937;" />
                
                <ListView fx:id="categoriesList" prefHeight="200" style="-fx-font-size: 12;" />
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="New Category" onAction="#onNewCategorySettings" style="-fx-padding: 8 15; -fx-font-size: 12; -fx-background-color: #3b82f6; -fx-text-fill: white; -fx-border-radius: 4;" />
                    <Button text="Edit" onAction="#onEditCategory" style="-fx-padding: 8 15; -fx-font-size: 12; -fx-background-color: #8b5cf6; -fx-text-fill: white; -fx-border-radius: 4;" />
                    <Button text="Delete" onAction="#onDeleteCategory" style="-fx-padding: 8 15; -fx-font-size: 12; -fx-background-color: #ef4444; -fx-text-fill: white; -fx-border-radius: 4;" />
                </HBox>
                <Label fx:id="categoriesStatus" text="" style="-fx-font-size: 11; -fx-text-fill: #6b7280;" />
            </VBox>

            <!-- Data Management Section -->
            <VBox spacing="15" style="-fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 20; -fx-background-color: white;">
                <Label text="Data Management" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #1f2937;" />
                
                <!-- Export Tasks -->
                <VBox spacing="8">
                    <Label text="Export Tasks to JavaScript" style="-fx-font-size: 12; -fx-text-fill: #6b7280;" />
                    <HBox spacing="10">
                        <Button text="Export to JS" onAction="#onExportTasks" style="-fx-padding: 10 20; -fx-font-size: 12; -fx-background-color: #10b981; -fx-text-fill: white; -fx-border-radius: 4;" />
                        <Label fx:id="exportStatus" text="" style="-fx-font-size: 11; -fx-text-fill: #6b7280;" />
                    </HBox>
                </VBox>
                
                <!-- Import Tasks -->
                <Separator />
                <VBox spacing="8">
                    <Label text="Import Tasks from JavaScript" style="-fx-font-size: 12; -fx-text-fill: #6b7280;" />
                    <HBox spacing="10">
                        <Button text="Import from JS" onAction="#onImportTasks" style="-fx-padding: 10 20; -fx-font-size: 12; -fx-background-color: #f59e0b; -fx-text-fill: white; -fx-border-radius: 4;" />
                        <Label fx:id="importStatus" text="" style="-fx-font-size: 11; -fx-text-fill: #6b7280;" />
                    </HBox>
                </VBox>
            </VBox>

            <!-- About Section -->
            <VBox spacing="10" style="-fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-padding: 20; -fx-background-color: white;">
                <Label text="About" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #1f2937;" />
                <Label text="Doable - Task Management Application" style="-fx-font-size: 12; -fx-text-fill: #6b7280;" />
                <Label text="Version 1.0" style="-fx-font-size: 11; -fx-text-fill: #9ca3af;" />
            </VBox>

        </VBox>
    </ScrollPane>

    <!-- Status Bar -->
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10; -fx-background-color: #ffffff; -fx-border-color: #e5e7eb; -fx-border-width: 1 0 0 0;">
        <Button text="Save" onAction="#onSave" style="-fx-padding: 10 30; -fx-font-size: 12; -fx-background-color: #2563eb; -fx-text-fill: white; -fx-border-radius: 4;" />
        <Button text="Close" onAction="#onClose" style="-fx-padding: 10 30; -fx-font-size: 12; -fx-background-color: #6b7280; -fx-text-fill: white; -fx-border-radius: 4;" />
    </HBox>

</VBox>
