<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.doable.controller.HomeController" style="-fx-font-family: 'Segoe UI', 'Arial'; -fx-background-color: #f5f5f5;">
    <top>
        <VBox style="-fx-background-color: #2563eb; -fx-padding: 20;" spacing="15">
            <Label text="Today" style="-fx-font-size: 32; -fx-text-fill: white; -fx-font-weight: bold;" />
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Filter:" style="-fx-text-fill: white; -fx-font-size: 14;" />
                <ChoiceBox fx:id="filterChoice" prefWidth="120" style="-fx-font-size: 12;" />
                <Label text="Category:" style="-fx-text-fill: white; -fx-font-size: 14;" />
                <ComboBox fx:id="categoryFilter" prefWidth="150" style="-fx-font-size: 12;" />
                <Label text="Task Type:" style="-fx-text-fill: white; -fx-font-size: 14;" />
                <ChoiceBox fx:id="taskTypeFilter" prefWidth="150" style="-fx-font-size: 12;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="âš™ Settings" onAction="#onSettings" style="-fx-padding: 8 16; -fx-font-size: 12; -fx-background-color: #10b981; -fx-text-fill: white; -fx-cursor: hand;" />
                <Button text="+ Add Task" onAction="#onAddTask" style="-fx-padding: 8 16; -fx-font-size: 12; -fx-background-color: white; -fx-text-fill: #2563eb; -fx-font-weight: bold; -fx-cursor: hand;" />
                <Button text="Logout" onAction="#onLogout" style="-fx-padding: 8 16; -fx-font-size: 12; -fx-background-color: #dc2626; -fx-text-fill: white; -fx-cursor: hand;" />
            </HBox>
        </VBox>
    </top>
    <center>
        <TabPane style="-fx-background-color: #f5f5f5;">
            <Tab text="Active Tasks" closable="false">
                <VBox spacing="0" style="-fx-background-color: #f5f5f5;">
                    <padding>
                        <Insets top="10" left="10" right="10" bottom="10" />
                    </padding>
                    <ListView fx:id="taskList" prefWidth="800" prefHeight="480" style="-fx-control-inner-background: #ffffff; -fx-padding: 10;" />
                </VBox>
            </Tab>
            <Tab text="Completed Manager Tasks" closable="false">
                <VBox spacing="15" style="-fx-background-color: #f5f5f5; -fx-padding: 15;">
                    <HBox spacing="10">
                        <Label text="Filter by Date:" style="-fx-font-weight: bold; -fx-font-size: 12;" />
                        <DatePicker fx:id="completedDateFilter" prefWidth="150" />
                        <Label text="Category:" style="-fx-font-weight: bold; -fx-font-size: 12;" />
                        <ComboBox fx:id="completedCategoryFilter" prefWidth="150" promptText="All Categories" />
                        <Button text="Clear Filters" onAction="#onClearCompletedFilters" style="-fx-padding: 5 10; -fx-font-size: 11;" />
                        <Region HBox.hgrow="ALWAYS" />
                    </HBox>
                    <ListView fx:id="completedTaskList" prefWidth="800" prefHeight="420" style="-fx-control-inner-background: #ffffff; -fx-padding: 10;" />
                </VBox>
            </Tab>
        </TabPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #ffffff; -fx-border-color: #e5e7eb #e5e7eb #e5e7eb #e5e7eb;">
            <padding>
                <Insets top="10" left="10" right="10" bottom="10" />
            </padding>
            <HBox spacing="10">
                <Button fx:id="editButton" text="Edit" onAction="#onEditTask" style="-fx-padding: 8 12; -fx-font-size: 11; -fx-background-color: #3b82f6; -fx-text-fill: white;" />
                <Button fx:id="deleteButton" text="Delete" onAction="#onDeleteTask" style="-fx-padding: 8 12; -fx-font-size: 11; -fx-background-color: #ef4444; -fx-text-fill: white;" />
                <Button text="Refresh" onAction="#onRefresh" style="-fx-padding: 8 12; -fx-font-size: 11; -fx-background-color: #6b7280; -fx-text-fill: white;" />
            </HBox>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="statusLabel" text="Ready" style="-fx-font-size: 12; -fx-text-fill: #6b7280;" />
        </HBox>
    </bottom>
</BorderPane>
